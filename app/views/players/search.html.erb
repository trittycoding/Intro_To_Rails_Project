
<!-- Main container -->
<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item">
      <p class="subtitle is-5">
        <strong><%= @returned_players.count %></strong> players found
      </p>
    </div>
    <div class="level-item">
      <div class="field is-grouped">
          <%= form_with(url: search_players_path, method: :get, local: true) do %>
            <div class="control">
              <%= text_field_tag(:keywords, nil, class: "input level-item", placeholder: 'Search by Name') %>
            </div>
            <div class="control">
              <%= submit_tag("Search", class: "button is-primary") %>
            </div>
          <% end %>
      </div>
    </div>
  </div>


  <div class="level-right">
    <p class="level-item"><%= link_to "Home", root_path %></p>
    <p class="level-item"><%= link_to "Teams", teams_path %></p>
    <p class="level-item"><%= link_to "Positions", roles_path %></p>
    <p class="level-item"><strong>NFL Players: Combine Stats 2000-2018</strong></p>
  </div>
</nav>
<table class="table is-bordered is-striped is-fullwidth">
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Height(Inches)</th>
      <th>Weight(Pounds</th>
      <th>Forty Yard Dash(sec)</th>
      <th>Vertical Leap(Inches)</th>
      <th>Bench Press Reps</th>
      <th>Broad Jump(Inches)</th>
      <th>Three Cone Drill(sec)</th>
      <th>Shuttle Run(sec)</th>
      <th>Draft Year</th>
      <th>Drafted By</th>
      <th>Round Drafted</th>
      <th>Pick Number</th>
    </tr>
  </thead>

  <tbody>
    <% @returned_players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= player.playerposition%></td>
        <td><%= player.height %></td>
        <td><%= player.weight %></td>
        <td><%= player.forty %></td>
        <td><%= player.vertical %></td>
        <td><%= player.benchreps %></td>
        <td><%= player.broadjump %></td>
        <td><%= player.cone %></td>
        <td><%= player.shuttle %></td>
        <td><%= player.draftyear %></td>
        <td><%= player.draftedby %></td>
        <td><%= player.round %></td>
        <td><%= player.pick %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @returned_players, renderer: BulmaPagination::Rails, class: 'is-centered' %>

