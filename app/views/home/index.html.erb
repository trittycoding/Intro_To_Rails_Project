<%= render partial: 'menu/levelmenu'%>

<!--Start Columns-->
<div class="columns is-multiline is-mobile">

    <!--Top 40 Yard Dash times-->
  <div class="column is-one-quarter">
    <h3 class="subtitle">Top 40 Yard Dash Times</h3>
    <table class="table is-bordered is-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Position</th>
          <th>Forty Yard Dash(sec)</th>
          <th>Draft Year</th>
        </tr>
      </thead>

      <tbody>
        <% topFortyPlayers = @players.where("forty IS NOT NULL").order("forty ASC").limit(10)%>
        <% topFortyPlayers.each do |player|%>
          <tr>
            <td><%= link_to player.name, player %></td>
            <td><%= player.playerposition%></td>
            <td><%= player.forty %></td>
            <td><%= player.draftyear %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

